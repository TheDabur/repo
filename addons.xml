<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="program.DaburBuild" name="The Dabur Build" version="1.0.0" provider-name="The Dabur">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.requests" version="2.4.3" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="[login|startup]"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">The Dabur Build</summary>
		<description lang="en"></description>
		<description lang="he"></description>
	<disclaimer lang="en"></disclaimer>
	<disclaimer lang="he"></disclaimer>
	<source>http://</source>
	<website>http://</website>
	<platform>all</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
		</assets>
	<news></news>
	</extension>
</addon>

<addon id="repository.thedabur" name="The Dabur Add-on repository" version="1.0.0" provider-name="TheDabur">
	<extension point="xbmc.addon.repository" name="The Dabur Add-on repository">
		<info compressed="false">http://raw.github.com/TheDabur/repo/master/addons.xml</info>
		<checksum>http://raw.github.com/TheDabur/repo/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/TheDabur/repo/master/repo</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons from The Dabur</summary>
		<description lang="en">Download and install add-ons from The Dabur repository.</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
